  <body x-data="{ atTop: false }" :class="{ 'sticky-nav': atTop, '': !atTop }"
    @scroll.window="atTop = (window.pageYOffset > 300 ) ? true : false"
  >
    <!-- Google Tag Manager (noscript) -->
