      "id": "show_copy",
      "label": "Show Copyright"
    },
    {
      "type": "url",
      "id": "privacy_policy_url",
      "label": "Privacy Policy Link"
    },
    {
      "type": "url",
      "id": "terms_url",
      "label": "Terms & Conditions Link"
    }
  ],
  "blocks": [
    {
      "name": "Payment Method",
      "type": "payment_method_image",
      "settings": [
        {
