    {
      "type": "link_list",
      "id": "shop_workwear_menu",
      "label": "Shop Workwear Menu"
    },
    {
      "type":"text",
      "id":"brands_title",
      "label":"Brands Title",
      "default": "Brands"
    },
    {
      "type": "link_list",
      "id": "brands_menu",
      "label": "Brands Menu"
    },
    {
      "type":"text",
      "id":"safety_title",
      "label":"Safety Title",
