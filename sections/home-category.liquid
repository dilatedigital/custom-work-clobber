<div>
   {% for block in section.blocks %}
      {% if block.type == 'category_image' %}
      <div class="category">
         <a href="{{ block.settings.category_link }}">
         <h3 class="font-black uppercase">{{ block.settings.category_title }} </h3>
         <img src="{{ block.settings.image | img_url: 'master' }}">
         </a>
      </div>
      {% endif %}
   {% endfor %}
  

</div>
{% schema %} 
{
  "name":"Categories",
  "tag":"section",
  "class":"categories",
  "blocks":[
     {
        "name":"Category",
        "type":"category_image",
        "settings":[
           {
              "type":"image_picker",
              "id":"image",
              "label":"Image"
           },
           {
            "type":"text",
            "id":"category_title",
            "label":"Category Title"
           },
           {
            "type":"url",
            "id":"category_link",
            "label":"Category Link"
           }
        ]
     }
  ]
}
{% endschema %}