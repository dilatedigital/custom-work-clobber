<style>
  .hero-slider {
    max-width: 1920px;
  }
  .mobile-hero {
    min-height: 616px;
  }
  .mobile-hero-texts-btn .wc-btn {
    width: 181px;
    height: 64px;
  }

  .mobile-hero-texts-btn .wc-btn svg {
    width: 16px;
    fill: #fff;
    margin-left: 10px;
  }

  .mobile-hero-text h1 {
    font-size: 50px;
    color: #fff;
    background-color: #101010;
    line-height: 52px;
    display: inline;
    padding-right: 10px;
    white-space: pre-wrap;
    box-shadow: -10px 0 0 #101010;
  }

  .mobile-hero-text span {
    font-size: 13px;
    color: var(--yellow);
    font-family: 'Eurostile';
    font-weight: 800;
    background-color: #101010;
    padding: 5px 10px 7px 5px;
    box-shadow: -10px 0 0 #101010;
  }

  .mobile-hero-texts-btn .wc-btn {
    margin-top: 20px;
    margin-left: -8px;
  }

  .mobile-hero-texts-btn {
    padding-left: 30px;
  }

  @media screen and (min-width: 390px) {
    .mobile-hero-text h1 {
      font-size: 58px;
    }
  }

  @media screen and (min-width: 500px) {
    .mobile-hero > img {
      object-fit: cover;
      width: 100%;
      height: 616px;
    }
  }
  
</style>
<div class="mobile-hero relative flex items-center">
  <img src="{{ section.settings.mobile_hero_image | img_url: 'master'  }}" class="absolute top-0 left-0">
  <div class="mobile-hero-texts-btn relative z-10">
    {% if section.settings.mobile_hero_title %}
    <div class="mobile-hero-text uppercase">
      {{ section.settings.mobile_hero_title }}
    </div> 
    {% endif %}
    {% if section.settings.mobile_button_title %}
      <a href="{{ section.settings.mobile_button_link }}" class="bg-wc-black text-white transition flex items-center justify-center wc-btn uppercase lg:text-xl">
        {{ section.settings.mobile_button_title }} {% render 'icon-chevron-right' %}
      </a>
    {% endif %}
  </div>
</div>
<div class="hidden hero-slider mx-auto">
  <p>Home Hero</p>
  {% assign counter = 0 %}
  {% for block in section.blocks %}
    {% assign counter = counter | plus: 1 %}
    
    <p>0{{ counter }} / 0{{ section.blocks.size }}</p>
  {% endfor %}
  
</div>
{% schema %} 
{
  "name":"Home Hero",
  "tag":"section",
  "class":"home-hero",
  "max_blocks":3,
  "settings":[
     {
        "type":"html",
        "id":"mobile_hero_title",
        "label":"Mobile Hero Title"
     },
     {
        "type":"text",
        "id":"mobile_button_title",
        "label":"Mobile Hero Button Title"
     },
     {
        "type":"url",
        "id":"mobile_button_link",
        "label":"Mobile Hero Button Title"
     },
     {
        "type":"image_picker",
        "id":"mobile_hero_image",
        "label":"Mobile Hero Image"
     }
  ],
  "blocks":[
     {
        "name":"Hero Slider",
        "type":"hero_slider",
        "settings":[
           {
              "type":"image_picker",
              "id":"image",
              "label":"Image"
           },
           {
              "type":"html",
              "id":"slide_title",
              "label":"Slide Title"
           },
           {
              "type":"html",
              "id":"slide_right_text",
              "label":"Slide Right Texts"
           },
           {
              "type":"text",
              "id":"button_title",
              "label":"Slide Button Title"
           },
           {
              "type":"url",
              "id":"slide_button_url",
              "label":"Slide Button Link"
           }
        ]
     }
  ]
}
{% endschema %}
