<style>
  .inner-banner {
    min-height: 230px;
  }
  .inner-banner h1 {
    font-size: 50px;
    color: #fff;
    background-color: #101010;
    line-height: 52px;
    display: inline;
    padding-right: 10px;
    white-space: pre-wrap;
    box-shadow: -10px 0 0 #101010;
  }

  @media screen and (min-width: 1024px) {
    .inner-banner {
      min-height: 430px;
    }

    .inner-banner h1 {
      font-size: 80px;
      line-height: 70px;
      padding-right: 20px;
      box-shadow: -20px 0 0 #101010;
    }
  }
</style>
<div class="text-center">
  <h1 class="uppercase text-2xl relative z-20">{{ section.settings.inner_banner_title }}</h1>
  {% if section.settings.inner_banner_image != blank %}
    <img src="{{ section.settings.inner_banner_image | img_url: 'master' }}" loading="lazy" alt="{{ section.settings.inner_banner_image.alt }}" class="absolute top-0 left-0 w-full object-cover h-230 lg:h-430">
  {% endif %}
</div>
{% schema %} 
{
  "name":"Inner Banner",
  "class":"inner-banner relative flex items-center justify-center bg-wc-yellow",
  "settings": [
    {
      "type": "text",
      "id": "inner_banner_title",
      "label": "Title"
    },
    {
      "type": "image_picker",
      "id": "inner_banner_image",
      "label": "Inner Banner Image"
    }
  ],
  "presets": [
     {
       "name": "Inner Banner"
     }
  ]
}
{% endschema %}