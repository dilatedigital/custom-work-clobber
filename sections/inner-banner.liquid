<style>
  .inner-banner {
    min-height: 230px;
  }

  @media screen and (min-width: 1024px) {
    .inner-banner {
      min-height: 430px;
    }
  }
</style>
<div>
  <h1 class="uppercase text-2xl relative z-20">{{ section.settings.inner_banner_title }}</h1>
  {% if section.settings.inner_banner_image != blank %}
    <img src="{{ section.settings.inner_banner_image | img_url: 'master' }}" loading="lazy" alt="{{ section.settings.inner_banner_image.alt }}" class="absolute top-0 left-0 w-full object-cover h-60 xct:h-430">
  {% endif %}
</div>
{% schema %} 
{
  "name":"Inner Banner",
  "tag":"section",
  "class":"inner-banner relative flex items-center justify-center",
  "settings": [
    {
      "type": "text",
      "id": "inner_banner_title",
      "label": "Title"
    },
    {
      "type": "image_picker",
      "id": "inner_banner_image",
      "label": "Inner Banner Image"
    }
  ]
}
{% endschema %}