<div class="container mx-auto pt-50px xct:pt-100px font-euro text-xl uppercase">
  {% if section.settings.left_text != blank %}
    <div>
      {{ section.settings.left_text }}
    </div>
  {% endif %}
  {% if section.settings.right_image != blank %}
    <img src="{{ section.settings.right_image | img_url: 'master' }}" alt="{{ section.settings.right_image.alt }}" loading="lazy">
  {% endif %}
</div>
{% schema %} 
{
  "name":"Left Text Right Image",
  "settings": [
    {
      "type":"richtext",
      "id":"left_text",
      "label":"Left Text"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Image"
    }
  ],
  "presets": [
     {
       "name": "Left Text Right Image"
     }
  ],
  "templates": [
     "page"
  ]
}
{% endschema %}