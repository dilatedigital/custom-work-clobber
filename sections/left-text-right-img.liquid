<style>
  @media screen and (min-width: 1024px) {
    .right-image {
      max-width: 400px;
    }
  }
  @media screen and (min-width: 1170px) {
    .left-text-container {
      max-width: 440px;
      padding-top: 45px;
    }
  }
</style>
<div class="container mx-auto py-50px xct:py-100px lg:flex lg:items-start xct:justify-between">
  {% if section.settings.left_text != blank %}
    <div class="mb-6 text-lg lg:mb-0 lg:mr-12 xct:mr-0 left-text-container">
      {{ section.settings.left_text }}
    </div>
  {% endif %}
  {% if section.settings.right_image != blank %}
    <img src="{{ section.settings.right_image | img_url: 'master' }}" alt="{{ section.settings.right_image.alt }}" loading="lazy" class="right-image">
  {% endif %}
</div>
{% schema %} 
{
  "name":"Left Text Right Image",
  "settings": [
    {
      "type":"richtext",
      "id":"left_text",
      "label":"Left Text"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Image"
    }
  ],
  "presets": [
     {
       "name": "Left Text Right Image"
     }
  ],
  "templates": [
     "page"
  ]
}
{% endschema %}